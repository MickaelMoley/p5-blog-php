{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}
    <main>
        <div class="container">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-flex">
                            <div class="flex-grow-1 bg-register-image" style="background-image: url(&quot;assets/img/dogs/image2.jpeg&quot;);"></div>
                        </div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h4 class="text-dark mb-4">Créer un compte</h4>
                                </div>
                                <form class="user" method="post">
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <label for="form[username]">Nom d'utilisateur</label>
                                            <input class="form-control form-control-user" type="text" id="exampleFirstName" placeholder="ex : John Doe" name="form[username]">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form[email]">Adresse mail</label>
                                        <input class="form-control form-control-user" type="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="ex : john.doe@mail.com" name="form[email]">
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <label for="form[password]">Mot de passe</label>
                                            <input class="form-control form-control-user" type="password" id="examplePasswordInput" placeholder="*********" name="form[password]">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="form[password_repeat]">Confirmation de mot de passe</label>
                                            <input class="form-control form-control-user" type="password" id="exampleRepeatPasswordInput" placeholder="**********" name="form[password_repeat]">
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-block text-white btn-user" type="submit" name="btn_submit">Créer mon compte</button>
                                    <hr>
                                </form>
                                <div class="text-center"><a class="small" href="forgot-password.html">Mot de passe oublié ?</a></div>
                                <div class="text-center"><a class="small" href="login.html">J'ai déjà un compte. Me connecter</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}

