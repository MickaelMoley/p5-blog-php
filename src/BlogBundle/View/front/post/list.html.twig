{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}
    <div class="container " >
        <section class="mt-5">
            <div class="row my-5">
                <div class="col-12">
                    <h1 class="fw-bolder display-5 text-dark font-weight-bold">Derniers articles</h1>
                    <p class="lead text-black-50">Toutes les derni√®res nouvelles dans le monde.</p>
                </div>

            </div>
            <hr class="m-0">
            <div class="row">
                <div class="col-12">
                    <ul class="list-unstyled">
                        {% for post in posts|reverse %}
                            <li class=" my-5">
                                <div class="row">
                                    <div class="col-12 col-md-3">
                                            {{ post.createdAt|date('d M Y') }}
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <h2 class="h4 fw-bolder mb-4">{{ post.title }}</h2>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 offset-md-3 col-md-9">
                                        <p class="text-muted">{{ post.excerpt }}</p>
                                        <a href="/post/{{ post.id }}/show" class="text-success">En savoir plus</a>
                                    </div>
                                </div>
                            </li>
                            <hr class="m-0">
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}

