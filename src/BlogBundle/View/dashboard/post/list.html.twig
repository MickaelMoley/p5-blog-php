{% extends 'dashboard/base_layout.html.twig' %}
{% block stylsheets %}
    {{ parent() }}

{% endblock stylsheets %}
{% block body %}


    <section class="w-100">
        <h1 class="main-title">Listes d'articles</h1>
        <table class="w-100">
            <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.author_id }}</td>
                    <td>{{ post.updated_at }}</td>
                    <td>
                        <a href="/intranet/post/{{ post.id }}/edit">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </section>
{% endblock body %}

{% block javascripts %}
    {{  parent() }}

{% endblock javascripts %}